@page "/gallery"
@using CatBoyFinder.Data
@using CatBoyCommon.Models
@using CatBoyCommon

<PageTitle>Gallery</PageTitle>

<h1>Da CatBoy'z Gallery</h1>

<p>Best Gallery.</p>

@if (details == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 10px;">
        @foreach (var detail in details)
        {
            <div style="margin: 0;">
                <a href="@detail.FileUrl"><img src="@detail.PreviewUrl" style="max-width: 100%; height: auto;"></a>
            </div>
        }
    </div>
}

@code {
    private PostDetails[]? details;

    protected override async Task OnInitializedAsync()
    {
        details = CatBoyContext.instance.PostDetails.GetAll().ToArray();
    }
}
